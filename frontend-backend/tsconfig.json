{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,

    "paths": {
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"]
    },

    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"]
  }
}