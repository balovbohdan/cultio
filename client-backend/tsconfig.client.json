{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@root/*": ["./*"],
      "@css/*": ["css/*"],
      "@lib/*": ["lib/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@endpoints": ["endpoints"],
      "@endpoints/*": ["endpoints/*"],
      "@fonts/*": ["../assets/fonts/*"],
      "@components/*": ["components/*"]
    },

    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"]
  }
}